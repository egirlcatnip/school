{
  "version": "2.0.0",
  "configurations": [
    {
      "name": "C++ - current",
      "type": "lldb",
      "preLaunchTask": "Build C++ - current",
      "request": "launch",
      "program": "/tmp/${fileBasename}.out",
      "windows": {
        "program": "C:/Windows/Temp/{fileBasename}.exe"
      }
    },
    {
      "name": "C - current",
      "type": "lldb",
      "preLaunchTask": "Build C - current",
      "request": "launch",
      "program": "/tmp/${fileBasename}.out",
      "windows": {
        "program": "C:/Windows/Temp/{fileBasename}.exe"
      }
    },
    {
      "name": "LLDB Picker",
      "type": "lldb",
      "request": "launch",
      "program": "${input:openDialog}",
    },
    {
      "name": "GDB Picker",
      "type": "gdb",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "target": "qemu-arm ${input:openDialog}"
    },
  ],
  "inputs": [
    {
      "id": "openDialog",
      "type": "command",
      "command": "extension.commandvariable.file.openDialog"
    }
  ]
}
