{
  "version": "2.0.0",
  "configurations": [
    {
      "name": "C++ - current",
      "type": "lldb",
      "preLaunchTask": "Build C++ - current",
      "sourceLanguages": [
        "c",
        "cpp",
      ],
      "request": "launch",
      "program": "/tmp/${fileBasename}.out",
      "cwd": "${fileDirname}",
      "windows": {
        "program": "C:/Windows/Temp/{fileBasename}.exe"
      }
    },
    {
      "name": "ASM - current",
      "type": "lldb",
      "preLaunchTask": "Build ASM - current",
      "stopOnEntry": true,
      "sourceLanguages": [
        "arm"
      ],
      "request": "launch",
      "program": "/tmp/${fileBasename}.out",
      "cwd": "${fileDirname}",
    },
    {
      "name": "LLDB picker",
      "type": "lldb",
      "request": "launch",
      "program": "${input:openDialog}"
    },
  ],
  "inputs": [
    {
      "id": "openDialog",
      "type": "command",
      "command": "extension.commandvariable.file.openDialog"
    }
  ]
}
