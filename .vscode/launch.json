{
  "version": "2.0.0",
  "configurations": [
    {
      "name": "C++",
      "type": "lldb",
      "preLaunchTask": "Build C++",
      "request": "launch",
      "program": "/tmp/${fileBasename}.out",
      "cwd": "${fileDirname}",
      "windows": {
        "program": "C:/Windows/Temp/{fileBasename}.exe"
      }
    },
    {
      "name": "C++ - picker",
      "type": "lldb",
      "request": "launch",
      "program": "${input:openDialog}"
    },
    {
      "name": "C",
      "type": "lldb",
      "preLaunchTask": "Build C",
      "request": "launch",
      "program": "/tmp/${fileBasename}.out",
      "cwd": "${fileDirname}",
      "windows": {
        "program": "C:/Windows/Temp/{fileBasename}.exe"
      }
    },
    {
      "name": "C - picker",
      "type": "lldb",
      "request": "launch",
      "program": "${input:openDialog}"
    }
  ],
  "inputs": [
    {
      "id": "openDialog",
      "type": "command",
      "command": "extension.commandvariable.file.openDialog"
    }
  ]
}
